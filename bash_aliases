alias l='ls --color=auto --group-directories-first'
alias ll='l -lh'
alias la='l -Alh'

# interactive&verbose aliases
alias cp='cp -iv'
alias mv='mv -iv'
alias rm='rm -iv'
alias mkdir='mkdir -pv'

alias grep='grep --color'

# just laziness
alias wifi-reload='sudo systemctl restart netctl-auto@wlp2s0'

alias vi='vim'
