# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	output_format=i3bar
	color_good = '#33cc00'
    color_degraded = '#ffff66'
    color_bad = '#ff0000'
    colors = true
    interval = 5
}

#order += "cpu_usage"
order += "volume master"
order += "tztime local"


tztime local {
    format = "   %d-%m-%Y  %H:%M "
}

volume master {
   format = "  %volume "
   format_muted = "  %volume "
   device = "default"
   mixer = "Master"
   mixer_idx = 0
}

cpu_usage {
	format = " : %usage"
}

